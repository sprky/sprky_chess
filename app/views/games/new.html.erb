<div class="form-page-container">
  <div class="form-page-content">
    <h3>Name Your Game</h3>
      <%= simple_form_for @game do |f| %>
      <%= f.input :name %>
      <%= f.input :white_player_id, :as => :hidden, :input_html => { :value => current_player.id } %>
      <br />
      <%= f.submit 'Create' %>
    <% end %></div>
</div>